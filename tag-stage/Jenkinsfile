pipeline {
    agent any

    environment {
        ARTEFACT_NAME = "${WORKSPACE}/target/WebGoat-${BUILD_VERSION}.war"
        JENKINS_CRED = 'docker-rgy-id'
        DEV_REPO = 'staging-dev'
        PROD_REPO = 'staging-prod'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -Dproject.version=$BUILD_VERSION -Dmaven.test.failure.ignore clean package'
            }
            post {
                success {
                    echo 'Now archiving...'
                    archiveArtifacts artifacts: "**/target/*.war"
                }
            }
        }

        stage('Tagging'){
            steps {
                script {
                    // createTag nexusInstanceId: 'nxrm3', tagName: 'WebGoat-Legacy-App'

                    createTag nexusInstanceId: 'nxrm3', tagAttributesJson: '''{"name": " tag_name "}''', tagName: 'web goat'

                    // createTag nexusInstanceId: 'nxrm3', tagAttributesJson: '''{
                    //     "name": " tag_name ",
                    //     "attributes": {
                    //         "buildUser": " build_user ",
                    //         "buildJob": " build_tag ",
                    //         "buildId": " job_id ",
                    //         "appVersion": " build_version ",
                    //         "buildUrl": " build_url ",
                    //         "iqscan":  "scan_report"             
                    //     }
                    //     }''', 
                    //     tagName: 'JOB_NAME/BUILD_NUMBER'


                }
            }
        }
    }
}

